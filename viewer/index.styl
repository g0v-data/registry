@import 'basic'

#root
  margin: 20px
.entries
  flexbox()
  flex-wrap(wrap)
.entry 
  width: 240px
  min-height: 120px
  padding: 5px
  flex(1 1 auto)
  .title small
    font-weight: 200
    font-size: 0.8em
    color: #777
.entry-inner
  width: 100%
  height: 100%
  border: 1px solid #ccc
  padding: 10px
  .title
    font-size: 1.2em
    font-weight: bold
.featuring
  width: 320px
  min-height: 200px    
.thumb
  width: 100%
  height: 160px
  background-size: cover
  background-position: center center
  background-repeat: no-repeat
  background-color: #eee
  margin-bottom: 8px
.flexend
  opacity: 0
  flex(100 0 auto!important)
