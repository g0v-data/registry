.g0v-projects
  width: 100%
  overflow-x: scroll
  white-space: nowrap
  .g0v-project
    display: inline-block
    width: 300px
    height: 380px
    border: 1px solid #ccc
    border-radius: 3px
    padding: 5px 10px
    margin: 10px 0 10px 15px
    white-space: normal!important
    vertical-align: top
    box-shadow: 0 1px 2px rgba(0,0,0,0.1)
    &:last-of-type
      margin-right: 15px
    .name
      font-weight: bold
      font-size: 1.2em
      text-align: center
      margin-bottom: 5px
      width: 100%
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
    .thumbnail
      width: 280px
      height: 154px
      margin-bottom: 5px
      background-position: center center
      background-repeat: no-repeat
      background-color: rgba(192,192,192,0.1)
      background-size: cover
    .description
      max-height: 80px
      text-overflow: ellipsis
      overflow: hidden

    .description, .repo-url, .project-url
      margin-bottom: 10px
    .repo-url, .project-url
      width: 100%
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
    .repo-url:before, .project-url:before
      display: block
      font-weight: bold
    .repo-url:before
      content: "源碼網址"
    .project-url:before
      content: "專案網址"
